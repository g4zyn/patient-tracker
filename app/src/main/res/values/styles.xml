<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Splash screen theme. -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/blue</item>
    </style>

    <style name="Container" parent="AppTheme">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="ItemTextStyle" parent="AppTheme">
        <item name="android:textAlignment">textStart</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:layout_marginTop">5sp</item>
    </style>

    <style name="ListItem" parent="AppTheme">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="TitleStyle" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:padding">5dp</item>
<!--        <item name="android:layout_margin">15dp</item>-->
    </style>

    <style name="LogoStyle" parent="AppTheme">
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppDescStyle" parent="AppTheme">
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditTextStyle" parent="AppTheme">
<!--        <item name="android:padding">15dp</item>-->
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
